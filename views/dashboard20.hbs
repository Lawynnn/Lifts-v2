<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard â€“ Kargo</title>

    {{!-- Personal Scripts --}}
    <script src="/javascript/dash2.js"></script>

    {{!-- Stylesheet --}}
    <link rel="stylesheet" href="/stylesheets/style_2.0.css">

    {{!-- Boxicons --}}
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>

    {{!-- jQuery --}}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body>
    <div class="top-nav">
        <div class="header">
            <h2>Dashboard</h2>
            <span>{{active.data.username}}<span data-sid="yes">{{active.data.id}}</span></span>
        </div>
        <button class="footer">
            <span>Hey, <strong>{{user.username}}</strong><br><span style="font-size: 14px">Administrator</span></span>
            <img src="https://cdn.discordapp.com/avatars/{{user.id}}/{{user.avatar}}.png">
        </button>
    </div>
    <div class="left-nav">
        <div class="header">
            <div class="logo">
                <h3>Kargo</h3>
            </div>
            <div class="content">
                <button class="btn active" onClick="toUrl('/dashboard/{{active._id}}')"><box-icon name='objects-vertical-bottom' color='var(--g-txt-sec)' ></box-icon> Dashboard</button>
                <button class="btn" onClick="toUrl('/dashboard/{{active._id}}/commands')"><box-icon name='code-curly' color='var(--g-txt-sec)' ></box-icon> 
                    <div class="col">
                        Commands
                        <span>Total: {{active.commands.length}}</span>
                    </div>
                </button>
                <button class="btn" onClick="toUrl('/dashboard/{{active._id}}/variables')"><box-icon name='data' color='var(--g-txt-sec)' ></box-icon>
                    <div class="col">
                        Variables
                        <span>Total: {{active.variables.length}}</span>
                    </div>
                </button>
                <button class="btn" onClick="toUrl('/dashboard/{{active._id}}/stats')"><box-icon name='stats' color='var(--g-txt-sec)' ></box-icon> Status</button>
                <br>
                <div class="bots">
                    {{!-- {{#each bots}}
                    <button onClick="toUrl('/dashboard/{{this._id}}')" class="btn bot{{#eq ../active._id this._id}} active{{/eq}}" data-id="{{this._id}}">
                        <img src="{{this.data.avatar}}">
                        <span>{{this.data.username}}</span>
                    </button>
                    {{/each}} --}}
                </div>
                <button class="btn"><box-icon color="var(--g-txt-sec)" name='plus'></box-icon> Add bot</button>
                <button class="btn"><box-icon color="var(--g-txt-sec)" name='share-alt'></box-icon> 
                    <div class="col">
                        Create template
                        <span>Not available</span>
                    </div>
                </button>
            </div>
        </div>
        <div class="footer">
            <button class="btn" onClick="toUrl('/premium')"><box-icon name='diamond' color='var(--g-gold)' ></box-icon>
                <div class="col">
                    Premium
                    <span>Inactive</span>
                </div>
            </button>
            <button class="btn" onClick="toUrl('/logout')"><box-icon name='log-out' color='var(--g-txt-sec)' ></box-icon> Logout</button>
        </div>
    </div>
</body>
</html>